
<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">
    <%= current_course.title %>
  </h1>

  <% unless current_course.image.url.nil? %>

    <%= image_tag current_course.image.url, class: 'img-fluid' %>
    
  <% end %>

  <br />

  <%= link_to 'Preview as a Student...', course_path(current_course), class: 'btn btn-warning float-right' %>

  <%= link_to 'Add a new image', course_path(current_course), class: 'btn btn-warning float-left' %>

  <br class="clr" />

  <br />

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        
          <%= section.title %>
          <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
          <ul>
            
              <li>
                <% section.lessons.each do |lesson| %>

                  <b><%= lesson.title %></b>
                  -
                  <%= lesson.subtitle %>
                <% end %>
              </li>
            
          </ul>

    <br class="clr" />
  
      </li>
    <% end %>
  </ul>

</div>